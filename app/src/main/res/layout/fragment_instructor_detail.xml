<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InstructorDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/back_arrow_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingEnd="3dp"
                android:paddingStart="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/rounded_arrow_back_ios_new_24"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/instructor_image"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:src="@drawable/round_account_circle_24_black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/instructor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="24dp"
                android:padding="24dp"
                android:text="Instructor Name"
                android:textStyle="bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/message_container"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/instructor_bg"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/message_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/back_arrow_bg"
                    android:padding="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/round_message_24"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/message_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="Message"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>