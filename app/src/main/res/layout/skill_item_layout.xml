<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/skill_item_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginBottom="16dp"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/skill_item_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/skill_item_title"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="wrap_content"
        android:text="Sample text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="16dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:singleLine="true"
        android:background="@drawable/pipe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/skill_item_title"
        app:layout_constraintEnd_toStartOf="@id/skill_item_instructor"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/skill_item_instructor"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="wrap_content"
        android:text="Sample text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="16dp"
        android:textAlignment="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/skill_item_title"
        app:layout_constraintEnd_toStartOf="@id/forward"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/forward"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingEnd="3dp"
        android:paddingStart="0dp"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/rounded_arrow_back_ios_new_24_black"/>

</androidx.constraintlayout.widget.ConstraintLayout>